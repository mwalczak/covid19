{% extends 'base.html.twig' %}

{% block title %}Covid-19 data{% endblock %}

{% block body %}
    <h3>Total records: {{ data|length }}</h3>
    <h4>Last update: {{ updated|date('Y-m-d H:i') }}</h4>
    <div class="settings">
        {% if(china) %}
            <a href="{{ path('index', {'includeChina': 0, 'includeWorld': world, 'casesThreshold': cases, 'deathsThreshold': deaths }) }}">Exclude China</a>
        {% else %}
            <a href="{{ path('index', {'includeChina': 1, 'includeWorld': world, 'casesThreshold': cases, 'deathsThreshold': deaths }) }}">Include China</a>
        {% endif %}
        {% if(world) %}
            <a href="{{ path('index', {'includeWorld': 0, 'includeChina': china, 'casesThreshold': cases, 'deathsThreshold': deaths }) }}">Exclude World</a>
        {% else %}
            <a href="{{ path('index', {'includeWorld': 1, 'includeChina': china, 'casesThreshold': cases, 'deathsThreshold': deaths }) }}">Include World</a>
        {% endif %}
        {% if(cases) %}
            <a href="{{ path('index', {'casesThreshold': 0, 'includeWorld': world, 'includeChina': china, 'deathsThreshold': deaths }) }}">All cases</a>
        {% else %}
            <a href="{{ path('index', {'casesThreshold': 1, 'includeWorld': world, 'includeChina': china, 'deathsThreshold': deaths }) }}">> 100 cases total</a>
        {% endif %}
        {% if(deaths) %}
            <a href="{{ path('index', {'deathsThreshold': 0, 'includeWorld': world, 'includeChina': china, 'casesThreshold': cases }) }}">All deaths</a>
        {% else %}
            <a href="{{ path('index', {'deathsThreshold': 1, 'includeWorld': world, 'includeChina': china, 'casesThreshold': cases }) }}">> 100 deaths total</a>
        {% endif %}
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Location</th>
                <th>New cases</th>
                <th>New deaths</th>
                <th>Total cases</th>
                <th>Total deaths</th>
                <th>Death %</th>
            </tr>
            </thead>
            <tbody>
            {% for record in data %}
                <tr>
                    <td>{{ record.date }}</td>
                    <td>{{ record.location }}</td>
                    <td>{{ record.newCases }}</td>
                    <td>{{ record.newDeaths }}</td>
                    <td>{{ record.cases }}</td>
                    <td>{{ record.deaths }}</td>
                    <td>{{ record.deathPercent }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
